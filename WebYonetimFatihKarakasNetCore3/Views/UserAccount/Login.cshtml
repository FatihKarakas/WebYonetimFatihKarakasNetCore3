<div class="row">
    <div class="col-6 offset-3">
        <h3 class="display-4 border-bottom text-center pb-2">KULLANICI GİRİŞ BİLGİLERİ</h3>
    </div>
</div>

<div class="row">
    <div class="col-6 offset-3 mt-5">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label">Kullanıcı Adınız :</label>
                <input asp-for="UserName" class="form-control" placeholder="Kullanıcı Adınız" />
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Parola :</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Parola!" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            
            <div class="form-group d-grid mb-3">
                <button type="submit" class="btn btn-primary d-block"><i class="fa-solid fa-right-to-bracket me-2"></i>Kullanıcı Girişi</button>
            </div>
        </form>
    </div>
</div>